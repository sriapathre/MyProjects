<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogMyTime" x:Class="LogMyTime.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">

    <Grid>
        
        <local:ImageButton x:Name="btnStart" 
                           Width="105" Height="105"
                           ImageWidth="100" ImageHeight="100" ImageSource="/images/start.png" ImageLocation="Top" Click="btnStart_Click"/>
        <local:ImageButton x:Name="btnStop" 
                           Width="105" Height="105"
                           ImageWidth="100" ImageHeight="100" ImageSource="/images/stop.png" ImageLocation="Top" Click="btnStop_Click"/>
        <StackPanel>
            <TextBlock Text="abc" Name="txtTimer"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
